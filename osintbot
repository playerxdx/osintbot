async def ping(update: Update, context: ContextTypes.DEFAULT_TYPE):
    uptime = int(time.time() - BOT_START_TIME)
    mins = uptime // 60
    await send_with_credit(update, f"ğŸ“ Pong! Bot is alive. ({mins} minutes uptime)")

