        await send_with_credit(update, "âŒ Only admins can protect numbers.")
        return
    if len(context.args) != 1:
        await send_with_credit(update, "Usage: /protect <number>")
        return
    number = context.args
    db_protect(number)
    await send_with_credit(update, f"âœ… Number protected: {number}")

